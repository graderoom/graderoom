<!doctype html>
<html>
<head>
    <title>Graderoom</title>
    <link rel="icon" href="../public/dark_mode/resources/icon.png">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="/public/dark_mode/css/main.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat:500&display=swap">
</head>
<body>
<div class="container h-100 d-flex justify-content-center ">
    <div class="col-sm-9 col-md-7 col-lg-5">
        <div class="card card-signin my-5">
            <div class="card-body">
                <h1 class="text-center card-title">
                    <i class="fa fa-plus-circle" aria-hidden="true"></i>
                    Sign Up
                </h1>
                <% if (updateWeightMessageFail.length > 0) { %>
                    <div class="alert alert-danger"><%= updateWeightMessageFail %></div>
                <% } %>
                <% if (updateWeightMessageSuccess.length > 0) { %>
                    <div class="alert alert-danger"><%= updateWeightMessageSuccess %></div>
                <% } %>

                <form class="form-signin" action="/updateweights" method="post">
                    <div class="form-group">
                        <label>Class Name *</label>
                        <input type="text" class="form-control lock-bg" name="className">
                    </div>
                    <div class="form-group">
                        <label>Weights as Json (test) *</label>
                        <input type="text" class="form-control email-bg" name="newWeights">
                    </div>
                    <br>
                    <div class="text-center">
                        <button type="submit" class="btn btn-default btn-lg">update weights</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
</body>
</html>

<!doctype html>
<html>
<head>
    <title>Graderoom</title>
    <link rel="icon" href="../public/resources/icon.png">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        body {
            padding: 10px;
            background-color: #222222;
         }
    </style>
</head>
<body>
<a href="/logout" class="btn btn-warning btn-sm">Logout</a>
<br>
<% if (updateGradesMessageSuccess.length > 0) { %>
    <div class="alert alert-danger"><%= updateGradesMessageSuccess %></div>
<% } %>

<% if (updateGradesMessageFail.length > 0) { %>
    <div class="alert alert-success"><%= updateGradesMessageFail %></div>
<% } %>
<div class="container">

    <div class="jumbotron text-center" style="background-color: #222222; color: white;">
        <h1><span class="fa fa-graduation-cap"></span> Graderoom: <%=user.username%></h1>
        <form action="/update" method="post">
            <button type="submit" class="btn btn-info btn-lg">Update Grades</button>
        </form>
    </div>


</div>
</body>
</html>

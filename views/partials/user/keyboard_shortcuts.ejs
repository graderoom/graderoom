<!-- Keyboard Shortcuts Card -->
<div class="blurred-login" id="shortcutsDisplay"
     style="position:fixed; display:none; height: 100%; width: 100%; top: 0; left: 0; z-index: 1">
    <div class="blurred-background"></div>
    <div class="col-sm-11 col-md-10 col-lg-9 col-xl-8 mx-auto">
        <div id="latestCard" class="card card-signin my-5">
            <btn class="btn btn-md"
                 onclick="closeForm('shortcutsDisplay')"
                 style="width: fit-content; margin-bottom:0;">
                <i class="fa fa-close" aria-hidden="true"></i> Close
            </btn>
            <div class="card-body">
                <h1 class="card-title text-center"><span class="fa fa-keyboard-o"></span>
                    Keyboard Shortcuts
                </h1>
                <div style="display: flex; flex-flow: column; align-content: space-around">
                    <div class="card-body">
                        <div style="display: flex; justify-content: center; align-items: center" class="card-footer">
                            <label style="margin-bottom: 0" class="key-display">←</label>
                            <label style="margin-bottom: 0">&nbsp;and&nbsp;</label>
                            <label style="margin-bottom: 0" class="key-display">→</label>
                            <label style="margin-bottom: 0; margin-left: auto; text-align: right">Move through
                                classes<br>Move through tabs in settings</label>
                        </div>
                        <div style="display: flex" class="card-footer">
                            <label style="margin-bottom: 0" class="key-display">W</label>
                            <label style="margin-bottom: 0; margin-left: auto; text-align: right">Show/Hide what's
                                new</label>
                        </div>
                        <div style="display: flex" class="card-footer">
                            <label style="margin-bottom: 0" class="key-display">S</label>
                            <label style="margin-bottom: 0; margin-left: auto; text-align: right">Open/Close
                                settings</label>
                        </div>
                        <div style="display: flex" class="card-footer">
                            <label style="margin-bottom: 0" class="key-display">Q</label>
                            <label style="margin-bottom: 0; margin-left: auto; text-align: right">Show/Hide
                                changelog</label>
                        </div>
                        <div style="display: flex" class="card-footer">
                            <label style="margin-bottom: 0" class="key-display">K</label>
                            <label style="margin-bottom: 0; margin-left: auto; text-align: right">Show/Hide this
                                page</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
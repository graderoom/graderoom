<!doctype html>
<html>
<head>
    <title>GradeRoom</title>
    <link rel="icon" href="/public/resources/common/icon.png">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat:500&display=swap">
    <% if (darkMode) { %>
        <link rel="stylesheet" type="text/css" href="public/css/dark_mode.css">
    <% } else { %>
        <link rel="stylesheet" type="text/css" href="public/css/light_mode.css">
    <% } %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body>
    <div class="container h-100 d-flex justify-content-center ">
        <div class="col-sm-10 col-md-8 col-lg-6 col-xl-5">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h1 class="text-center card-title">
                        <img src="/public/resources/dark_mode/logo.png" class="logo" width=60rem>
                        GradeRoom
                    </h1>
                    <% if (message.length > 0) { %>
                        <div class="alert alert-danger"><%= message %></div>
                    <% } %>
                    <br>
                    <form class="form-signin" action="/login" method="post">
                        <div class="form-group">
                            <label>Username</label>
                            <input type="text" class="form-control user-bg" name="username" autofocus>
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" class="form-control lock-bg" name="password">
                        </div>
                        <br>
                        <div class="text-center">  
                            <button type="submit" class="btn btn-default btn-lg">
                                <i class="fa fa-sign-in" aria-hidden="true"></i> 
                                Login
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <a href="/signup">Create Account</a>
                </div>  
            </div>
        </div>
    </div>
</body>
</html>

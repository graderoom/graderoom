<!doctype html>
<html>
<head>
    <title>Graderoom</title>
    <link rel="icon" href="/public/resources/icon.png">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="/public/css/main.css">
</head>

<body>
    <div class="container h-100 d-flex justify-content-center ">
        <div class="col-sm-9 col-md-7 col-lg-5">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h1 class="text-center">Graderoom</h1>

                    <% if (message.length > 0) { %>
                        <div class="alert alert-danger"><%= message %></div>
                    <% } %>
                    <form class="form-signin" action="/login" method="post">
                        <div class="form-group">
                            <label>Username</label>
                            <input type="text" class="form-control user-bg" name="username" autofocus>
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" class="form-control lock-bg" name="password">
                        </div>
                        <br>
                        <div class="text-center">
                            <button type="submit" class="btn btn-default btn-lg">Login</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <a href="/signup" style="color:#BBBBBB">Create Account</a>
                </div>

            </div>
        </div>
    </div>
</body>
</html>

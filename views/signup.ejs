<!doctype html>
<html>
<head>
    <title>Graderoom</title>
    <link rel="icon" href="../public/resources/icon.png">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="/public/css/main.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat:500&display=swap">
</head>
<body>
    <div class="container h-100 d-flex justify-content-center ">
        <div class="col-sm-9 col-md-7 col-lg-5">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h1 class="text-center">Sign Up</h1>

                    <form class="form-signin" action="/signup" method="post">
                        <div class="form-group">
                            <label>Username</label>
                            <input type="text" class="form-control user-bg" name="username">
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" class="form-control lock-bg" name="password">
                        </div>
                        <div class="form-group">
                            <label>School Email</label>
                            <input type="text" class="form-control email-bg" name="school_email">
                        </div>
                        <div class="form-group">
                            <label>School Password</label>
                            <input type="password" class="form-control" name="school_password">
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-default btn-lg">Signup</button>
                        </div>
                    </form>
            </div>
        </div>
    </div>
</body>
</html>

<!doctype html>
<html>
<head>
    <title>Graderoom</title>
    <link rel="icon" href="../public/dark_mode/resources/icon.png">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="/public/dark_mode/css/main.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat:500&display=swap">
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
    <div class="container h-100 d-flex justify-content-center ">
        <div class="col-sm-10 col-md-8 col-lg-6 col-xl-5">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h1 class="text-center card-title">
                        <i class="fa fa-plus-circle" aria-hidden="true"></i>
                        Sign Up
                    </h1>
                    <% if (message.length > 0) { %>
                        <div class="alert alert-danger"><%= message %></div>
                    <% } %>
                    <form class="form-signin" action="/signup" method="post">
                        <div class="form-group">
                            <label>Username *</label>
                            <input type="text" class="form-control user-bg" name="username">
                        </div>
                        <div class="form-group">
                            <label>Password *</label>
                            <input type="password" class="form-control lock-bg" name="password">
                        </div>
                        <div class="form-group">
                            <label>School Email *</label>
                            <input type="text" class="form-control email-bg" name="school_email">
                        </div>
                        <br>
                        <div class="text-center">
                            <button type="submit" class="btn btn-default btn-lg">Signup</button>
                        </div>
                    </form>
                </div>

                <div class="card-footer text-center">
                    <a href="/" style="color:#BBBBBB">Sign in instead</a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
